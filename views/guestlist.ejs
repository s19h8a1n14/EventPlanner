<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guest List</title>
    <link rel="stylesheet" href="guestlist.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="stroke">
        <ul>
          <li><a href="/home">Home</a></li>
          <li><a href="/organise"  >Organise an Event</a></li>
          <li><a href="/myevents" class="active">My Events</a></li>
          <li><a href="/mybookings">My Bookings</a></li>
          <a href="/login"><button class="glow-on-hover" type="submit" formaction="/login" >Log Out</button></a>          
        </ul>
    </nav>
    <div class="container">
        <div class="header">
            <div class="header-item">Guest Name</div>
            <div class="header-item">Email ID</div>
        </div>
        <%for(var i=0;i<guest.length;i++){%>
        <div class="row">
            <div class="item"><%=guest[i].guest_name%></div>
            <div class="item"><%=guest[i].guest_email%></div>
        </div>
        <%}%>

        
        <!-- Add New Guest Form -->
         <%if(locals.guest){%>
            <div class="add-guest">
                <h2>Add New Guest</h2>
                <form id="guest-form" action="/addnewguest" method="post">
                    <label for="guest_name">Guest Name:</label>
                    <input type="text" id="guest_name" name="guest_name" required>
    
                    <label for="guest_email">Email ID:</label>
                    <input type="email" id="guest_email" name="guest_email" required>
                    <input type="hidden" name="event_id" value="<%=guest[0].event_id%>">
                    <button type="submit">Add Guest</button>
                </form>
            </div>
         <%}%>
        
    </div>